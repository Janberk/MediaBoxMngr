<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionMenuTextColor">@color/dark</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="actionMenuTextColor">@color/dark</item>
    </style>

    <style name="CustomActionBarTheme.NoTitleBar" parent="@style/Theme.AppCompat">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">False</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:background">@color/gold</item>

        <!-- Support library compatibility -->
        <item name="background">@color/gold</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/bright</item>
        <item name="android:textStyle">bold</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/bright</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">gravity</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <style name="MyActionBarTab.TabBar" parent="Widget.AppCompat.ActionBar.TabBar">
        <item name="android:background">@drawable/tabs_background</item>
    </style>

    <style name="MyActionBarTab" parent="Widget.AppCompat.ActionBar.TabView">
        <item name="android:measureWithLargestChild">true</item>
        <item name="android:gravity">center</item>
    </style>

</resources>