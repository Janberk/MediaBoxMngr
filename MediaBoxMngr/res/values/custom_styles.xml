<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="editTextForm">
        <item name="android:layout_height">@dimen/custom_value_48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/custom_value_8dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="editTextForm.textStyle.input.search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/custom_value_4dp</item>
        <item name="android:layout_marginBottom">@dimen/custom_value_4dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="editTextForm.textStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textColorHint">@color/gray_blue</item>
        <item name="android:paddingLeft">@dimen/custom_value_8dp</item>
    </style>

    <style name="editTextForm.textStyle.input">
        <item name="android:background">@drawable/input_shape</item>
    </style>

    <style name="editTextForm.textStyle.inputDetails">
        <item name="android:background">@drawable/input_shape_details</item>
    </style>

    <style name="inputDetails">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textColorHint">@color/gray_blue</item>
        <item name="android:paddingLeft">@dimen/custom_value_8dp</item>
        <item name="android:background">@drawable/input_shape_details</item>
    </style>

    <style name="textViewForm">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:layout_marginTop">@dimen/custom_value_8dp</item>
        <item name="android:layout_marginBottom">@dimen/custom_value_8dp</item>
    </style>

    <style name="textViewDetails">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:layout_marginTop">@dimen/custom_value_4dp</item>
    </style>

    <style name="textViewDetails.content">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/bright</item>
        <item name="android:layout_marginTop">@dimen/custom_value_0dp</item>
        <item name="android:layout_marginBottom">@dimen/custom_value_4dp</item>
        <item name="android:layout_marginRight">@dimen/custom_value_8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="editTextDetails">
        <item name="android:layout_height">@dimen/custom_value_20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textColorHint">@color/gray_blue</item>
        <item name="android:layout_margin">@dimen/custom_value_2dp</item>
        <item name="android:background">@drawable/input_shape</item>
    </style>

    <style name="textViewList">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:layout_marginTop">@dimen/custom_value_8dp</item>
        <item name="android:layout_marginLeft">@dimen/custom_value_8dp</item>
        <item name="android:layout_marginRight">@dimen/custom_value_8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="textViewSelectList">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:layout_marginTop">@dimen/custom_value_8dp</item>
        <item name="android:layout_marginBottom">@dimen/custom_value_8dp</item>
    </style>

    <style name="buttonForm">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/custom_value_8dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="buttonAdd">
        <item name="android:layout_height">@dimen/custom_value_48dp</item>
        <item name="android:layout_width">@dimen/custom_value_64dp</item>
        <item name="android:layout_marginTop">@dimen/custom_value_8dp</item>
        <item name="android:layout_marginBottom">@dimen/custom_value_8dp</item>
    </style>

    <style name="buttonForm.textStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/bright</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonForm.textStyle.big">
        <item name="android:background">@drawable/btn_shape</item>
    </style>

    <style name="buttonAdd.textStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/bright</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonAdd.textStyle.small">
        <item name="android:background">@drawable/btn_small_shape</item>
    </style>

    <style name="spinnerTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/bright</item>
        <item name="android:layout_marginTop">@dimen/custom_value_4dp</item>
        <item name="android:layout_marginBottom">@dimen/custom_value_4dp</item>
    </style>

    <style name="ratingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:isIndicator">false</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">0.0</item>
        <item name="android:stepSize">1.0</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:minHeight">@dimen/custom_value_32dp</item>
        <item name="android:maxHeight">@dimen/custom_value_32dp</item>
    </style>

    <style name="ratingBar.small">
        <item name="android:progressDrawable">@drawable/custom_ratingbar_small</item>
        <item name="android:isIndicator">true</item>
        <item name="android:layout_centerHorizontal">false</item>
        <item name="android:minHeight">@dimen/custom_value_20dp</item>
        <item name="android:maxHeight">@dimen/custom_value_20dp</item>
    </style>
