<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/custom_value_16dp" >

        <TextView
            android:id="@+id/tv_fragmentDetails_itemContent"
            style="@style/textViewDetails"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/custom_value_8dp"
            android:layout_marginTop="@dimen/custom_value_16dp"
            android:text="@string/item_content_label" />

        <EditText
            android:id="@+id/et_fragmentDetails_itemContent"
            style="@style/inputDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_fragmentDetails_itemContent"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/custom_value_16dp"
            android:layout_marginBottom="@dimen/custom_value_8dp"
            android:hint="@string/item_content_hint"
            android:inputType="textMultiLine"
            android:maxLength="2000"
            android:maxLines="10"
            android:minHeight="80dp" />

        <TextView
            android:id="@+id/tv_fragmentDetails_genre"
            style="@style/textViewDetails"
            android:layout_below="@+id/et_fragmentDetails_itemContent"
            android:layout_centerHorizontal="true"
            android:text="Genre" />

        <EditText
            android:id="@+id/et_fragmentDetails_genre"
            style="@style/editTextForm.textStyle.input"
            android:layout_below="@+id/tv_fragmentDetails_genre"
            android:layout_centerHorizontal="true"
            android:hint="Enter genre"
            android:inputType="text" />

        <TextView
            android:id="@+id/tv_fragmentDetails_country"
            style="@style/textViewDetails"
            android:layout_below="@+id/et_fragmentDetails_genre"
            android:layout_centerHorizontal="true"
            android:text="Country" />

        <EditText
            android:id="@+id/et_fragmentDetails_country"
            style="@style/editTextForm.textStyle.input"
            android:layout_below="@+id/tv_fragmentDetails_country"
            android:layout_centerHorizontal="true"
            android:hint="Enter country"
            android:inputType="text" />

        <TextView
            android:id="@+id/tv_fragmentDetails_year"
            style="@style/textViewDetails"
            android:layout_below="@+id/et_fragmentDetails_country"
            android:layout_centerHorizontal="true"
            android:text="Year" />

        <EditText
            android:id="@+id/et_fragmentDetails_year"
            style="@style/editTextForm.textStyle.input"
            android:layout_below="@+id/tv_fragmentDetails_year"
            android:layout_centerHorizontal="true"
            android:hint="Enter year"
            android:inputType="text" />

        <TextView
            android:id="@+id/tv_fragmentDetails_author"
            style="@style/textViewDetails"
            android:layout_below="@+id/et_fragmentDetails_year"
            android:layout_centerHorizontal="true"
            android:text="Author" />

        <EditText
            android:id="@+id/et_fragmentDetails_author"
            style="@style/editTextForm.textStyle.input"
            android:layout_below="@+id/tv_fragmentDetails_author"
            android:layout_centerHorizontal="true"
            android:hint="Enter author"
            android:inputType="text" />

        <TextView
            android:id="@+id/tv_fragmentDetails_publisher"
            style="@style/textViewDetails"
            android:layout_below="@+id/et_fragmentDetails_author"
            android:layout_centerHorizontal="true"
            android:text="Publisher" />

        <EditText
            android:id="@+id/et_fragmentDetails_publisher"
            style="@style/editTextForm.textStyle.input"
            android:layout_below="@+id/tv_fragmentDetails_publisher"
            android:layout_centerHorizontal="true"
            android:hint="Enter publisher"
            android:inputType="text" />

        <TextView
            android:id="@+id/tv_fragmentDetails_edition"
            style="@style/textViewDetails"
            android:layout_below="@+id/et_fragmentDetails_publisher"
            android:layout_centerHorizontal="true"
            android:text="Edition" />

        <EditText
            android:id="@+id/et_fragmentDetails_edition"
            style="@style/editTextForm.textStyle.input"
            android:layout_below="@+id/tv_fragmentDetails_edition"
            android:layout_centerHorizontal="true"
            android:hint="Enter edition"
            android:inputType="text" />

        <TextView
            android:id="@+id/tv_fragmentDetails_isbn"
            style="@style/textViewDetails"
            android:layout_below="@+id/et_fragmentDetails_edition"
            android:layout_centerHorizontal="true"
            android:text="ISBN" />

        <EditText
            android:id="@+id/et_fragmentDetails_isbn"
            style="@style/editTextForm.textStyle.input"
            android:layout_below="@+id/tv_fragmentDetails_isbn"
            android:layout_centerHorizontal="true"
            android:hint="Enter ISBN"
            android:inputType="text" />
    </RelativeLayout>

</ScrollView>