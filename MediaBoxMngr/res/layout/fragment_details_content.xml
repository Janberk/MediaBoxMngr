<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="12" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_fragmentDetails_itemCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/item_cover_label"
            android:scaleType="centerCrop"
            android:src="@drawable/cover_placeholder" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="#000022"
        android:orientation="vertical"
        android:paddingLeft="@dimen/custom_value_4dp" >

        <TextView
            style="@style/textViewDetails"
            android:text="@string/details_genre" />

        <TextView
            style="@style/textViewDetails"
            android:text="@string/details_original_title" />

        <TextView
            style="@style/textViewDetails"
            android:text="@string/details_country" />

        <TextView
            style="@style/textViewDetails"
            android:text="@string/details_year" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="#000022"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_fragmentDetails_itemGenre"
            style="@style/textViewDetails" />

        <TextView
            android:id="@+id/tv_fragmentDetails_itemOriginalTitle"
            style="@style/textViewDetails" />

        <TextView
            android:id="@+id/tv_fragmentDetails_itemCountry"
            style="@style/textViewDetails" />

        <TextView
            android:id="@+id/tv_fragmentDetails_itemYear"
            style="@style/textViewDetails" />
    </LinearLayout>

</LinearLayout>