<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:weightSum="10" >

    <include
        android:id="@+id/fragmentItemList_editTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/fragment_edit_title" >
    </include>

    <include
        android:id="@+id/fragmentItemList_listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.8"
        layout="@layout/fragment_list_view" >
    </include>

    <Button
        android:id="@+id/btn_fragmentItemList_deleteSelected"
        style="@style/buttonForm.textStyle.big"
        android:layout_width="match_parent"
        android:background="@color/pastel_red"
        android:text="@string/dialog_header_delete_selected" />

    <include
        android:id="@+id/fragmentItemList_menuBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        layout="@layout/fragment_menu_bar" >
    </include>

</LinearLayout>