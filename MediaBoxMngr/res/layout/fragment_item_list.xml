<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true" >

    <include
        android:id="@+id/fragmentItemList_editTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/fragment_create_item" >
    </include>

    <include
        android:id="@+id/fragmentItemList_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragmentItemList_editTitle"
        layout="@layout/fragment_list_view" >
    </include>

    <include
        android:id="@+id/fragmentItemList_menuBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/fragment_view_menu" >
    </include>

</RelativeLayout>